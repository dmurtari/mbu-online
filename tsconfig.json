{
    "compilerOptions": {
        "module": "commonjs",
        "allowJs": false,
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./",
        "paths": {
            "@interfaces/*": [
                "src/server/interfaces/*"
            ],
            "@test/*": [
                "tests/*"
            ]
        }
    },
    "exclude": [
        "node_modules/"
    ]
}
