
{
    "include": [
        "./**/*.ts"
    ],
    "compilerOptions": {
        "module": "commonjs",
        "allowJs": false,
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "dist",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "types": [
            "mocha"
        ],
        "baseUrl": "../",
        "moduleResolution": "node",
        "paths": {
            "@models/*": [
                "src/models/*"
            ],
            "@config/*": [
                "src/config/*"
            ],
            "@routes/*": [
                "src/routes/*"
            ],
            "@interfaces/*": [
                "src/interfaces/*"
            ],
            "@middleware/*": [
                "src/middleware/*"
            ],
            "@app/*": [
                "src/*"
            ],
            "@test/*": [
                "tests/*"
            ],
            "*": [
                "node_modules/*"
            ]
        }
    }
}
