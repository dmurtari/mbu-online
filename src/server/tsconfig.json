{
    "extends": "../../tsconfig.json",
    "include": [
        "./**/*",
        "../libs/**/*"
    ],
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "allowJs": false,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "target": "es6",
        "noImplicitAny": true,
        "outDir": "../../dist/out-tsc",
        "baseUrl": ".",
        "paths": {
            "@models/*": [
                "models/*"
            ],
            "@config/*": [
                "config/*"
            ],
            "@routes/*": [
                "routes/*"
            ],
            "@middleware/*": [
                "middleware/*"
            ],
            "@interfaces/*": [
                "../libs/interfaces/*"
            ]
        }
    }
}
