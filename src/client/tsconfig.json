{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react",
        "outDir": "../../dist/out-tsc",
        "baseUrl": ".",
        "paths": {
            "@components/*": [
                "app/components/*"
            ],
            "@store/*": [
                "app/store/*"
            ],
            "@interfaces/*": [
                "../libs/interfaces/*"
            ]
        }
    },
    "include": [
        "app/**/*",
        "typings/**/*",
        "../libs/interfaces/**/*"
    ],
    "exclude": [
        "app/**/*.test.tsx"
    ]
}
