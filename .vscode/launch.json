{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "API Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "preLaunchTask": "build-ts",
            "args": [
                "--no-timeouts",
                "--colors",
                "--require",
                "ts-node/register",
                "--require",
                "tsconfig-paths/register",
                "tests/**/*.ts"
            ],
            "console": "integratedTerminal",
            "sourceMaps": true,
            "internalConsoleOptions": "neverOpen",
            "env": {
                "NODE_ENV": "test",
                "SENDGRID_API_KEY": "sendme",
                "APP_SECRET": "testsecret"
            }
        },
         {
            "type": "node",
            "request": "launch",
            "name": "API Tests (WSL)",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            // "preLaunchTask": "build-ts",
            "useWSL": true,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "${command:extension.vscode-wsl-workspaceFolder}",
            "args": [
                "--no-timeouts",
                "--colors",
                "--require",
                "ts-node/register",
                "--require",
                "tsconfig-paths/register",
                "${command:extension.vscode-wsl-workspaceFolder}/tests/**/*.ts"
            ],
            "sourceMaps": true,
            "internalConsoleOptions": "neverOpen",
            "env": {
                "NODE_ENV": "test",
                "SENDGRID_API_KEY": "sendme",
                "APP_SECRET": "testsecret",
                "WSLENV": "NODE_ENV:SENDGRID_API_KEY:APP_SECRET"
            }
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach by Process ID",
            "processId": "${command:PickProcess}",
            "protocol": "inspector"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Current File",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "preLaunchTask": "build-ts",
            "args": [
                "--no-timeouts",
                "--colors",
                "${file}",
                "--require",
                "ts-node/register",
                "--require",
                "tsconfig-paths/register"
            ],
            "console": "integratedTerminal",
            "sourceMaps": true,
            "internalConsoleOptions": "neverOpen",
            "env": {
                "NODE_ENV": "test",
                "SENDGRID_API_KEY": "sendme",
                "APP_SECRET": "testsecret"
            }
        }
    ]
}
